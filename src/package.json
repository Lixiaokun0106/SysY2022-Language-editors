{
	"name": "SysY2022E-Language-Support",
	"description": "SysY2022E language support for Visual Studio Code",
	"author": "Four Pigs",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Lixiaokun0106/SysY2022-Language-editors"
	},
	"publisher": "Four Pigs",
	
	"categories": [],
	"keywords": [
		"SysY2022E",
		"language",
		"syntax",
		"highlighting",
		"colorization",
		"code",
		"editor",
		"theme",
		"dark",
		"light",
		"high contrast",
		"color theme",
		"color"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:SysY2022E"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "SysY2022E Language Support Configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
            {
                "id": "SysY2022E",
                "extensions": [".sy"],
                "aliases": ["sysY2022E", "sy"],
				"configuration": "./server/src/langu/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "SysY2022E",
                "scopeName": "source.sy",
                "path": "./server/src/syntaxes/sy.tmLanguage.json"
            }
        ],
		"themes": [{
			"label": "SysY2022E",
			"uiTheme": "vs-dark",
			"path": "./server/src/themes/SysY2022E-color-theme.json"
		}],
		"commands":[
			{
			"command": "extension.runAnalysis",
			"title": "Run Analysis"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
