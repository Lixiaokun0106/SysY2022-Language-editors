{
    "scopeName": "source.sy",
    "name": "SysY2022E",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#types"
        },
        {
            "include": "#literals"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.sysy2022e",
                    "match": "\\b(int|float|void|const|return|if|else|while|break|continue|for|struct)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.sysy2022e",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.sysy2022e",
                    "match": "\\b(int|float|void)\\b"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "name": "constant.character.sysy2022e",
                    "match": "'([^'\\\\]|\\\\.)*'"
                },
                {
                    "name": "constant.numeric.float.sysy2022e",
                    "match": "[0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?|\\.[0-9]+([eE][+-]?[0-9]+)?|[0-9]+[eE][+-]?[0-9]+"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.sysy2022e",
                    "match": "(\\+|-|\\*|\\/|%|&&|\\|\\||==|!=|<=|>=|<|>|!|=|\\.|,|;|\\?|:)"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.sysy2022e",
                    "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.sysy2022e",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.sysy2022e",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.sysy2022e",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.sysy2022e",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        }
    },
    "scope": "source.sy"
}
